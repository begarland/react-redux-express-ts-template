{
  "name": "react-redux-express-ts-template",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/begarland/react-redux-express-template"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "babel-plugin-transform-decorators-legacy"
    ]
  },
  "dependencies": {
    "axios": "0.17.0",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "date-input-polyfill": "^2.14.0",
    "debug": "~2.6.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "~4.15.5",
    "express-react-views": "^0.10.4",
    "history": "^4.6.3",
    "jquery": "3.2.1",
    "moment": "2.19.3",
    "morgan": "~1.9.0",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-observable": "^0.18.0",
    "redux-promise-middleware": "^4.3.0",
    "redux-thunk": "^2.2.0",
    "rxjs": "^5.5.7"
  },
  "devDependencies": {
    "@types/jest": "20.0.8",
    "@types/jquery": "^3.2.15",
    "@types/node": "^8.0.47",
    "@types/react": "16.0.18",
    "@types/react-dom": "16.0.2",
    "@types/react-router-redux": "5.0.8",
    "@types/redux-logger": "3.0.5",
    "@types/redux-promise-middleware": "0.0.8",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify-css": "^0.12.0",
    "jest": "^22.4.3",
    "envify": "^4.1.0",
    "sinon": "^4.4.9",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1",
    "uglifyify": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)(spec|test).tsx?(x)"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "scripts": {
    "start": "npm run tsc & npm run sass & npm run web & npm run server",
    "tsc": "tsc --watch",
    "sass": "sass --watch web/src/main.scss:web/public/main.css",
    "server": "supervisor ./server/bin/www",
    "web": "watchify -t [ babelify --presets [ es2015 react babel-preset-stage-0 ] --plugins [ babel-plugin-transform-decorators-legacy ] ] web/dist/index.js -o web/public/bundle.js -v",
    "build": "browserify -t [ babelify --presets [ es2015 react babel-preset-stage-0 ] --plugins [ babel-plugin-transform-decorators-legacy ] ] web/dist/index.js -o web/public/bundle.js",
    "prod": "browserify ./web/dist/index.js -g [ envify --NODE_ENV production ] -g [ uglifyify ] -t [ babelify --presets [ es2015 react babel-preset-stage-0 ] --plugins [ babel-plugin-transform-decorators-legacy ] ] | uglifyjs --compress --mangle > ./web/public/bundle.js",
    "init": "sh init.sh",
    "test": "jest --color --verbose --expand --watchAll"
  }
}
