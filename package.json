{
  "name": "react-redux-express-ts-template",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/begarland/react-redux-express-template"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "babel-plugin-transform-decorators-legacy"
    ]
  },
  "dependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/sinon": "^5.0.1",
    "@types/jquery": "^3.2.15",
    "@types/jest": "20.0.8",
    "@types/node": "^8.0.47",
    "@types/react": "16.0.18",
    "@types/react-dom": "16.0.2",
    "@types/react-router-redux": "5.0.8",
    "@types/redux-logger": "3.0.5",
    "@types/redux-promise-middleware": "0.0.8",
    "axios": "0.17.0",
    "babelify": "^7.3.0",
    "body-parser": "~1.18.2",
    "browserify": "^16.2.2",
    "date-input-polyfill": "^2.14.0",
    "envify": "^4.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.3",
    "express-react-views": "^0.10.5",
    "history": "^4.6.3",
    "inversify": "^4.13.0",
    "inversify-express-utils": "^6.1.0",
    "jest": "^22.4.3",
    "jquery": "3.2.1",
    "moment": "2.19.3",
    "nodemon": "^1.17.5",
    "react": "16.0.0",
    "react-dom": "16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.0.0-alpha.2",
    "redux-promise-middleware": "^4.3.0",
    "redux-thunk": "^2.3.0",
    "reflect-metadata": "^0.1.12",
    "rxios": "github:begarland/rxios",
    "rxjs": "^6.2.0",
    "rxjs-compat": "^6.2.1",
    "sinon": "^4.5.0",
    "ts-node": "^7.0.0",
    "ts-jest": "^22.4.2",
    "tsify": "^4.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.8.1",
    "uglifyify": "^4.0.5",
    "watchify": "^3.11.0",
    "winston": "^2.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)(spec|test).tsx?(x)"
    ],
    "moduleDirectories": [
      "node_modules"
    ]
  },
  "scripts": {
    "dev": "npm run build & npm run start",
    "start": "NODE_ENV=development node_modules/.bin/nodemon --exec 'yarn run lint && node_modules/.bin/ts-node server/index.ts'",
    "build": "npm run sass & npm run typescript",
    "prod": "npm run sass-prod & npm run web-prod",
    "lint": "node_modules/.bin/tslint 'src/**/*.ts' -t verbose --force",
    "sass": "sass --watch web/src/main.scss:web/public/main.css",
    "test": "jest --color --verbose --expand --watchAll",
    "typescript": "watchify web/src/index.tsx -p tsify --debug -o web/public/bundle.js -v",
    "sass-prod": "sass --sourcemap=none web/src/main.scss:web/public/main.css",
    "web-prod": "node_modules/.bin/browserify web/src/index.tsx -p tsify -g [ envify --NODE_ENV production ] -g [ uglifyify ] -o web/public/bundle.js -v",
    "eb": "npm run prod & node_modules/.bin/ts-node server/index.ts"
  }
}
